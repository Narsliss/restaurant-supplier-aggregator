<div class="max-w-4xl mx-auto">
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Locations</h1>
    <%= link_to "Add Location", new_location_path, class: "inline-flex items-center justify-center bg-brand-orange text-white px-4 py-2 rounded-lg hover:bg-brand-orange-dark text-sm" %>
  </div>

  <% if @locations.any? %>
    <div class="bg-white shadow rounded-lg divide-y divide-gray-200">
      <% @locations.each do |location| %>
        <div class="p-4">
          <div class="flex items-start justify-between gap-2">
            <div class="min-w-0 flex-1">
              <h3 class="text-lg font-medium text-gray-900">
                <%= location.name %>
                <% if location.is_default %>
                  <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Default</span>
                <% end %>
              </h3>
              <p class="text-sm text-gray-500 break-words"><%= [location.address, location.city, location.state, location.zip_code].compact.join(", ") %></p>
              <% if location.phone.present? %>
                <p class="text-sm text-gray-500">Phone: <%= location.phone %></p>
              <% end %>
            </div>
            <div class="flex gap-3 flex-shrink-0">
              <%= link_to "Edit", edit_location_path(location), class: "text-brand-orange hover:text-brand-orange-dark text-sm font-medium" %>
              <%= button_to "Delete", location_path(location), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No locations yet. Add your first restaurant location.</p>
    </div>
  <% end %>
</div>
