<div class="max-w-4xl mx-auto">
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Supplier Credentials</h1>
    <%= link_to "Add Credential", new_supplier_credential_path, class: "inline-flex items-center justify-center bg-brand-orange text-white px-4 py-2 rounded-lg hover:bg-brand-orange-dark text-sm" %>
  </div>

  <% if @credentials.any? %>
    <div class="grid gap-4">
      <% @credentials.each do |credential| %>
        <div class="bg-white shadow rounded-lg p-4 sm:p-5">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <div class="min-w-0">
              <div class="flex items-center gap-2 flex-wrap">
                <h3 class="text-lg font-medium text-gray-900"><%= credential.supplier.name %></h3>
                <% case credential.status %>
                <% when "active" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                <% when "invalid" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Invalid</span>
                <% when "needs_2fa" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Needs 2FA</span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= credential.status.titleize %></span>
                <% end %>
              </div>
              <p class="text-sm text-gray-500 mt-0.5">Username: <%= credential.username %></p>
              <% if credential.status == "failed" && credential.last_error.present? %>
                <div class="mt-2 p-2 bg-red-50 border border-red-200 rounded text-xs text-red-700">
                  <p class="font-medium">Validation Error:</p>
                  <p class="mt-0.5 break-words"><%= credential.last_error %></p>
                </div>
              <% end %>
              <% if credential.on_hold? && credential.hold_reason.present? %>
                <p class="text-xs text-yellow-600 mt-1">Hold reason: <%= credential.hold_reason %></p>
              <% end %>
              <% if credential.last_login_at.present? %>
                <p class="text-xs text-gray-400 mt-1">Last login: <%= time_ago_in_words(credential.last_login_at) %> ago</p>
              <% end %>
            </div>
            <div class="flex flex-wrap gap-2 flex-shrink-0">
              <%= button_to validate_supplier_credential_path(credential), method: :post, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-brand-orange text-brand-orange hover:bg-brand-orange hover:text-white transition-colors" do %>
                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                Validate
              <% end %>
              <% if credential.active? %>
                <%= button_to import_products_supplier_credential_path(credential), method: :post, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-emerald-500 text-emerald-600 hover:bg-emerald-500 hover:text-white transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" /></svg>
                  Import Products
                <% end %>
              <% end %>
              <%= link_to edit_supplier_credential_path(credential), class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931z" /></svg>
                Edit
              <% end %>
              <%= button_to supplier_credential_path(credential), method: :delete, data: { turbo_confirm: "Are you sure you want to remove these credentials?" }, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-red-300 text-red-600 hover:bg-red-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" /></svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No supplier credentials configured. Add your first supplier login.</p>
    </div>
  <% end %>
</div>
