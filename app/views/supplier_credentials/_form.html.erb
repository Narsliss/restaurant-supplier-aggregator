<%# Build a map of supplier IDs to their auth_type %>
<% suppliers_auth_map = @all_suppliers.each_with_object({}) { |s, h| h[s.id] = s.auth_type } %>

<%= form_with(model: credential, class: "space-y-6", data: { controller: "credential-form", credential_form_suppliers_value: suppliers_auth_map.to_json }) do |form| %>
  <% if credential.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
      <ul class="mt-2 list-disc list-inside text-sm text-red-700">
        <% credential.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :supplier_id, "Supplier", class: "block text-sm font-medium text-gray-700" %>
    <% supplier_list = credential.persisted? ? @all_suppliers : @available_suppliers %>
    <%= form.collection_select :supplier_id, supplier_list, :id, :name, { prompt: "Select a supplier" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green", data: { action: "change->credential-form#supplierChanged", credential_form_target: "supplierSelect" } %>
  </div>

  <%# All fields below are hidden until a supplier is selected (shown for edit) %>
  <div data-credential-form-target="fieldsContainer" class="<%= 'hidden' unless credential.persisted? || credential.supplier_id.present? %> space-y-6">

    <%# 2FA-only notice %>
    <div data-credential-form-target="twoFaNotice" class="<%= 'hidden' unless credential.supplier&.two_fa_only? %> bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-blue-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        <p class="text-sm text-blue-700">
          This supplier uses <strong>2FA verification only</strong> (no password required). You'll receive a verification code via email or text when logging in.
        </p>
      </div>
    </div>

    <%# Welcome URL notice %>
    <div data-credential-form-target="welcomeUrlNotice" class="<%= 'hidden' unless credential.supplier&.welcome_url_auth? %> bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-blue-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        <p class="text-sm text-blue-700">
          Paste the <strong>Welcome URL</strong> from your supplier email. This is the long link that logs you in directly â€” no username or password needed.
        </p>
      </div>
    </div>

    <div data-credential-form-target="usernameField">
      <label data-credential-form-target="usernameLabel" for="supplier_credential_username" class="block text-sm font-medium text-gray-700">
        <%= credential.supplier&.welcome_url_auth? ? "Welcome URL" : "Email / Username" %>
      </label>
      <%= form.text_field :username, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green", required: true, autocomplete: "off", placeholder: credential.supplier&.welcome_url_auth? ? "https://www.whatchefswant.com/welcome/..." : "", data: { credential_form_target: "usernameInput" } %>
    </div>

    <div data-controller="password-toggle" data-credential-form-target="passwordField" class="<%= 'hidden' if credential.supplier&.no_password_required? %>">
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <div class="relative mt-1">
        <%= form.password_field :password, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green pr-10", required: credential.new_record? && credential.supplier&.password_auth?, placeholder: credential.persisted? ? "Leave blank to keep current" : "", data: { password_toggle_target: "input", credential_form_target: "passwordInput" } %>
        <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-600" data-action="click->password-toggle#toggle">
          <svg data-password-toggle-target="showIcon" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.64 0 8.577 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.64 0-8.577-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <svg data-password-toggle-target="hideIcon" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12c1.292 4.338 5.31 7.5 10.066 7.5.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
          </svg>
        </button>
      </div>
    </div>

    <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
      <%= link_to "Cancel", supplier_credentials_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 text-center" %>
      <%= form.submit class: "px-4 py-2 text-sm font-medium text-white bg-brand-orange rounded-md hover:bg-brand-orange-dark cursor-pointer" %>
    </div>
  </div>
<% end %>
