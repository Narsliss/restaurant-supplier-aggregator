<div class="max-w-6xl mx-auto">
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Price Comparison</h1>
      <p class="text-sm text-gray-500">Order List: <%= @order_list.name %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= button_to "Refresh Prices", refresh_prices_price_comparison_path(@order_list), method: :post, class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm" %>
      <%= link_to "Back to List", order_list_path(@order_list), class: "text-gray-600 hover:text-gray-900 text-sm font-medium py-2" %>
    </div>
  </div>

  <% if @comparison.present? %>
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
      <% @comparison[:supplier_totals]&.each do |supplier_total| %>
        <div class="bg-white shadow rounded-lg p-4 <%= supplier_total[:recommended] ? 'ring-2 ring-green-500' : '' %>">
          <% if supplier_total[:recommended] %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 mb-2">Recommended</span>
          <% end %>
          <h3 class="font-medium text-gray-900"><%= supplier_total[:supplier_name] %></h3>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(supplier_total[:total]) %></p>
          <p class="text-sm text-gray-500"><%= supplier_total[:available_items] %>/<%= supplier_total[:total_items] %> items available</p>
        </div>
      <% end %>
    </div>

    <!-- Item-by-Item Comparison — Mobile cards -->
    <div class="sm:hidden bg-white shadow rounded-lg divide-y divide-gray-200">
      <% @comparison[:items]&.each do |item| %>
        <div class="p-4 space-y-2">
          <div class="flex justify-between items-start">
            <span class="text-sm font-medium text-gray-900"><%= item[:product_name] %></span>
            <span class="text-xs text-gray-500 flex-shrink-0 ml-2">Qty: <%= item[:quantity] %></span>
          </div>
          <div class="space-y-1">
            <% item[:prices]&.each_with_index do |price, idx| %>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500"><%= @suppliers[idx]&.name %></span>
                <span class="<%= price[:best_price] ? 'text-green-600 font-bold' : 'text-gray-900' %>">
                  <% if price[:available] %>
                    <%= number_to_currency(price[:unit_price]) %>
                  <% else %>
                    <span class="text-gray-400">N/A</span>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Item-by-Item Comparison — Desktop table -->
    <div class="hidden sm:block bg-white shadow rounded-lg overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Qty</th>
            <% @suppliers&.each do |supplier| %>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase"><%= supplier.name %></th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @comparison[:items]&.each do |item| %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-900"><%= item[:product_name] %></td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= item[:quantity] %></td>
              <% item[:prices]&.each do |price| %>
                <td class="px-4 py-3 text-right text-sm <%= price[:best_price] ? 'text-green-600 font-bold' : 'text-gray-900' %>">
                  <% if price[:available] %>
                    <%= number_to_currency(price[:unit_price]) %>
                  <% else %>
                    <span class="text-gray-400">N/A</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @comparison[:potential_savings].present? && @comparison[:potential_savings] > 0 %>
      <div class="mt-4 bg-green-50 border border-green-200 rounded-lg p-4">
        <p class="text-green-800 font-medium">Potential savings: <%= number_to_currency(@comparison[:potential_savings]) %> by choosing the recommended supplier.</p>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No price data available. Click "Refresh Prices" to fetch current prices from suppliers.</p>
    </div>
  <% end %>
</div>
