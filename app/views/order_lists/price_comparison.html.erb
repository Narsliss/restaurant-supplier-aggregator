<div class="max-w-6xl mx-auto">
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Price Comparison</h1>
      <p class="text-sm text-gray-500">Order List: <%= @order_list.name %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to "Back to List", order_list_path(@order_list), class: "text-gray-600 hover:text-gray-900 text-sm font-medium py-2" %>
    </div>
  </div>

  <% if @comparison[:items].any? %>
    <!-- Recommendation Banner -->
    <% if @comparison[:recommendations][:recommendation].present? %>
      <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <p class="text-blue-800"><%= @comparison[:recommendations][:recommendation] %></p>
      </div>
    <% end %>

    <!-- Summary Cards - Supplier Totals -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
      <% best_supplier_id = @comparison[:recommendations][:best_single_supplier]&.dig(:supplier_id) %>
      <% @comparison[:totals_by_supplier].each do |supplier_id, totals| %>
        <div class="bg-white shadow rounded-lg p-4 <%= supplier_id == best_supplier_id ? 'ring-2 ring-green-500' : '' %>">
          <% if supplier_id == best_supplier_id %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 mb-2">Best Value</span>
          <% end %>
          <h3 class="font-medium text-gray-900"><%= totals[:supplier_name] %></h3>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(totals[:total]) %></p>
          <p class="text-sm text-gray-500">
            <%= totals[:available_items] %>/<%= totals[:available_items] + totals[:missing_items] %> items available
          </p>
          <% unless totals[:meets_minimum] %>
            <p class="text-xs text-red-600 mt-1">
              Need <%= number_to_currency(totals[:amount_to_minimum]) %> more to meet minimum
            </p>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Summary Stats -->
    <div class="bg-white shadow rounded-lg p-4 mb-6">
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 text-center">
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @comparison[:summary][:total_items] %></p>
          <p class="text-xs text-gray-500">Total Items</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @comparison[:summary][:suppliers_compared] %></p>
          <p class="text-xs text-gray-500">Suppliers</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @comparison[:summary][:items_with_price_spread] %></p>
          <p class="text-xs text-gray-500">Price Variations</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@comparison[:summary][:potential_savings]) %></p>
          <p class="text-xs text-gray-500">Potential Savings</p>
        </div>
      </div>
    </div>

    <!-- Item-by-Item Comparison — Mobile cards -->
    <div class="sm:hidden bg-white shadow rounded-lg divide-y divide-gray-200">
      <% @comparison[:items].each do |item| %>
        <div class="p-4 space-y-2">
          <div class="flex justify-between items-start">
            <span class="text-sm font-medium text-gray-900"><%= item[:product][:name] %></span>
            <span class="text-xs text-gray-500 flex-shrink-0 ml-2">Qty: <%= item[:quantity] %></span>
          </div>
          <div class="space-y-1">
            <% item[:suppliers].each do |sp| %>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500"><%= sp[:supplier][:name] %></span>
                <span class="<%= sp[:supplier][:id] == item[:best_price]&.dig(:supplier_id) ? 'text-green-600 font-bold' : 'text-gray-900' %>">
                  <% if sp[:unit_price] && sp[:in_stock] %>
                    <%= number_to_currency(sp[:unit_price]) %>
                  <% elsif sp[:unit_price] && !sp[:in_stock] %>
                    <span class="text-orange-500"><%= number_to_currency(sp[:unit_price]) %> (OOS)</span>
                  <% else %>
                    <span class="text-gray-400">N/A</span>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <% if item[:price_spread] > 0 %>
            <p class="text-xs text-gray-400">Price spread: <%= number_to_currency(item[:price_spread]) %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Item-by-Item Comparison — Desktop table -->
    <div class="hidden sm:block bg-white shadow rounded-lg overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
            <% @suppliers.each do |supplier| %>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase"><%= supplier.name %></th>
            <% end %>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Spread</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @comparison[:items].each do |item| %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-900"><%= item[:product][:name] %></td>
              <td class="px-4 py-3 text-sm text-gray-500 text-center"><%= item[:quantity] %></td>
              <% item[:suppliers].each do |sp| %>
                <td class="px-4 py-3 text-right text-sm <%= sp[:supplier][:id] == item[:best_price]&.dig(:supplier_id) ? 'text-green-600 font-bold' : 'text-gray-900' %>">
                  <% if sp[:unit_price] && sp[:in_stock] %>
                    <%= number_to_currency(sp[:unit_price]) %>
                  <% elsif sp[:unit_price] && !sp[:in_stock] %>
                    <span class="text-orange-500" title="Out of Stock"><%= number_to_currency(sp[:unit_price]) %> *</span>
                  <% else %>
                    <span class="text-gray-400">—</span>
                  <% end %>
                </td>
              <% end %>
              <td class="px-4 py-3 text-right text-sm text-gray-400">
                <% if item[:price_spread] > 0 %>
                  <%= number_to_currency(item[:price_spread]) %>
                <% else %>
                  —
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr>
            <td class="px-4 py-3 text-sm font-medium text-gray-900" colspan="2">Totals</td>
            <% @suppliers.each do |supplier| %>
              <% totals = @comparison[:totals_by_supplier][supplier.id] %>
              <td class="px-4 py-3 text-right text-sm font-medium <%= supplier.id == best_supplier_id ? 'text-green-600' : 'text-gray-900' %>">
                <%= number_to_currency(totals[:total]) %>
              </td>
            <% end %>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <p class="mt-2 text-xs text-gray-400">* = Out of Stock</p>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No items in this order list. Add products to compare prices.</p>
      <%= link_to "Go to Order List", order_list_path(@order_list), class: "text-brand-orange hover:text-brand-orange-dark mt-2 inline-block" %>
    </div>
  <% end %>
</div>
