<%= form_with url: aggregated_lists_path, method: :post, class: "bg-white shadow rounded-lg p-6 space-y-4" do |f| %>
  <%= hidden_field_tag :return_to, "supplier_lists" %>

  <div>
    <%= f.label :name, "Comparison Name", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, name: "aggregated_list[name]",
        placeholder: "e.g., Staples, Produce, Weekend Prep",
        required: true,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green sm:text-sm" %>
  </div>

  <div>
    <p class="text-sm font-medium text-gray-700 mb-3">Select one list per supplier</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <% @lists_by_supplier_for_form.each do |supplier, lists| %>
        <div class="border border-gray-200 rounded-lg p-3">
          <label class="block text-sm font-medium text-gray-900 mb-1"><%= supplier.name %></label>
          <select name="supplier_list_ids[]"
                  class="block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm">
            <option value="">-- None --</option>
            <% lists.each do |list| %>
              <option value="<%= list.id %>">
                <%= list.name %> (<%= pluralize(list.product_count, "item") %>)
              </option>
            <% end %>
          </select>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Create & Match Products",
        class: "rounded-md bg-brand-orange px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-light transition-colors cursor-pointer" %>
  </div>
<% end %>
