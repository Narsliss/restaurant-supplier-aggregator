<%= link_to aggregated_list_path(aggregated_list), class: "block bg-white shadow rounded-lg p-4 hover:shadow-md transition-shadow" do %>
  <div class="flex justify-between items-center">
    <div>
      <h4 class="text-sm font-semibold text-gray-900"><%= aggregated_list.name %></h4>
      <p class="mt-1 text-xs text-gray-500">
        <% suppliers = aggregated_list.suppliers %>
        <% if suppliers.any? %>
          <%= suppliers.map(&:name).join(", ") %>
        <% else %>
          No suppliers connected
        <% end %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <% case aggregated_list.match_status %>
      <% when "matched" %>
        <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800">
          Matched
          <% if aggregated_list.total_match_count > 0 %>
            (<%= aggregated_list.total_match_count %>)
          <% end %>
        </span>
      <% when "matching" %>
        <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-800">Matching...</span>
      <% when "failed" %>
        <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-red-100 text-red-800">Failed</span>
      <% else %>
        <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-800">Pending</span>
      <% end %>
      <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
<% end %>
