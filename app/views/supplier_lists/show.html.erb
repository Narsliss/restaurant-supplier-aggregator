<div class="py-6">
  <div class="mb-6">
    <%= link_to "&larr; Back to Supplier Lists".html_safe, supplier_lists_path, class: "text-sm text-brand-orange hover:text-brand-orange-light" %>
  </div>

  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-heading font-bold text-gray-900"><%= @supplier_list.name %></h1>
      <p class="mt-1 text-sm text-gray-500">
        <%= @supplier_list.supplier.name %>
        <span class="mx-1">&middot;</span>
        <%= pluralize(@supplier_list.product_count, "product") %>
        <span class="mx-1">&middot;</span>
        Last updated: <%= @supplier_list.time_since_sync %>
      </p>
    </div>
    <%= button_to "Update List", sync_supplier_list_path(@supplier_list),
        method: :post,
        class: "rounded-md bg-brand-orange px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-light transition-colors" %>
  </div>

  <% if @items.empty? %>
    <div class="bg-white shadow rounded-lg p-8 text-center">
      <p class="text-gray-500">No items in this list yet. Click "Update List" to import products.</p>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pack Size</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @items.each do |item| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= item.name %></div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500"><%= item.sku %></td>
              <td class="px-6 py-4 text-sm text-gray-500"><%= item.pack_size %></td>
              <td class="px-6 py-4 text-sm text-right font-medium text-gray-900"><%= item.formatted_price %></td>
              <td class="px-6 py-4 text-center">
                <% if item.in_stock %>
                  <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800">In Stock</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-red-100 text-red-800">Out of Stock</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
