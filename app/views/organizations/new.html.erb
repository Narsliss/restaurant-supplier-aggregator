<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create Your Organization</h1>
      <p class="mt-2 text-gray-600">Set up your restaurant or company to get started with SupplierHub.</p>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <%= form_with model: @organization, url: organization_path, method: :post, local: true, class: "space-y-5" do |f| %>
        <div>
          <%= f.label :name, "Organization Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500", placeholder: "My Restaurant", required: true, autofocus: true %>
          <p class="mt-1 text-xs text-gray-500">This is typically your restaurant or company name.</p>
        </div>

        <div>
          <%= f.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500", placeholder: "(555) 123-4567" %>
        </div>

        <div>
          <%= f.label :address, "Address", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :address, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500", placeholder: "123 Main Street" %>
        </div>

        <div class="grid grid-cols-6 gap-4">
          <div class="col-span-3">
            <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <div class="col-span-1">
            <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :state, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500", maxlength: 2, placeholder: "NY" %>
          </div>

          <div class="col-span-2">
            <%= f.label :zip_code, "ZIP", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :zip_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>
        </div>

        <div class="pt-4">
          <%= f.submit "Create Organization", class: "w-full px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <p class="mt-6 text-center text-sm text-gray-500">
      You'll be the owner of this organization and can invite team members later.
    </p>
  </div>
</div>
