<% content_for :title, "Set New Password" %>

<div class="flex min-h-screen">
  <%= render "devise/shared/auth_panel" %>

  <!-- Right: New password form -->
  <div class="flex flex-1 flex-col justify-center px-6 py-12 lg:flex-none lg:w-1/2 lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <!-- Mobile logo -->
      <div class="lg:hidden mb-10 text-center">
        <%= render "shared/logo", variant: :login_mobile %>
      </div>

      <div>
        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-brand-green-50">
          <svg class="h-6 w-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
          </svg>
        </div>
        <h2 class="text-3xl font-heading font-bold tracking-tight text-gray-900">
          Set new password
        </h2>
        <p class="mt-2 text-sm text-gray-500">
          Choose a strong password to secure your account
        </p>
      </div>

      <%= render "devise/shared/error_messages" %>

      <div class="mt-8">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div>
            <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1.5">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                  class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3",
                  placeholder: "At least 6 characters" %>
            </div>
            <p class="mt-1 text-xs text-gray-400"><%= @minimum_password_length %> characters minimum</p>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1.5">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3" %>
            </div>
          </div>

          <div class="pt-1">
            <%= f.submit "Reset password",
                class: "flex w-full justify-center rounded-lg bg-brand-orange px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-orange transition-colors cursor-pointer" %>
          </div>
        <% end %>

        <p class="mt-8 text-center text-sm text-gray-500">
          Remember your password?
          <%= link_to "Back to sign in", new_session_path(resource_name),
              class: "font-semibold text-brand-orange hover:text-brand-orange-dark transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>
