<% content_for :title, "Account Settings" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-2xl font-heading font-bold text-gray-900">Account Settings</h1>
    <p class="mt-1 text-sm text-gray-500">Update your email or password</p>
  </div>

  <%= render "devise/shared/error_messages" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-8" }) do |f| %>
    <!-- Email section -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
        <h2 class="text-base font-heading font-semibold text-gray-900">Email Address</h2>
      </div>
      <div class="px-6 py-5">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1.5">
          <%= f.email_field :email, autocomplete: "email",
              class: "block w-full max-w-md rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="mt-2 text-sm text-brand-orange">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
    </div>

    <!-- Password section -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
        <h2 class="text-base font-heading font-semibold text-gray-900">Change Password</h2>
        <p class="mt-0.5 text-xs text-gray-500">Leave blank if you don't want to change it</p>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div>
          <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1.5">
            <%= f.password_field :password, autocomplete: "new-password",
                class: "block w-full max-w-md rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3",
                placeholder: "Leave blank to keep current" %>
          </div>
          <p class="mt-1 text-xs text-gray-400"><%= @minimum_password_length %> characters minimum</p>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1.5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "block w-full max-w-md rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Current password confirmation -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
        <h2 class="text-base font-heading font-semibold text-gray-900">Confirm Changes</h2>
      </div>
      <div class="px-6 py-5">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1.5">
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "block w-full max-w-md rounded-lg border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm py-2.5 px-3",
              placeholder: "Enter your current password to save" %>
        </div>
        <p class="mt-1 text-xs text-gray-400">Required to confirm any changes</p>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-2">
      <%= f.submit "Save changes",
          class: "inline-flex justify-center rounded-lg bg-brand-orange px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-orange transition-colors cursor-pointer" %>

      <%= link_to "Cancel", root_path,
          class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" %>
    </div>
  <% end %>

  <!-- Delete account -->
  <div class="mt-12 pt-8 border-t border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-sm font-medium text-red-600">Delete Account</h3>
        <p class="mt-0.5 text-xs text-gray-500">Permanently remove your account and all data</p>
      </div>
      <%= button_to "Delete my account", registration_path(resource_name),
          method: :delete,
          data: { turbo_confirm: "Are you sure? This will permanently delete your account and all associated data." },
          class: "inline-flex items-center rounded-lg border border-red-300 bg-white px-4 py-2 text-sm font-medium text-red-600 shadow-sm hover:bg-red-50 transition-colors cursor-pointer" %>
    </div>
  </div>
</div>
