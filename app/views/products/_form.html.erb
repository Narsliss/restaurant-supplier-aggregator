<%= form_with(model: product, class: "space-y-6") do |form| %>
  <% if product.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
      <ul class="mt-2 list-disc list-inside text-sm text-red-700">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green", required: true %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
    </div>
    <div>
      <%= form.label :subcategory, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :subcategory, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= form.label :unit_of_measure, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :unit_of_measure, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
    </div>
    <div>
      <%= form.label :upc, "UPC", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :upc, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
    </div>
    <div>
      <%= form.label :brand, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :brand, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", products_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    <%= form.submit class: "px-4 py-2 text-sm font-medium text-white bg-brand-orange rounded-md hover:bg-brand-orange-dark cursor-pointer" %>
  </div>
<% end %>
