<%# Usage: render "shared/logo", variant: :nav | :footer | :login | :login_mobile %>
<% variant ||= :nav %>

<% case variant %>
<% when :nav %>
  <div class="flex items-center space-x-2">
    <%= image_tag "logo-white.svg", alt: "SupplierHub", class: "h-8 w-8" %>
    <div class="flex items-baseline space-x-0.5">
      <span class="text-xl font-heading font-bold text-white tracking-wide">Supplier</span>
      <span class="text-xl font-heading font-bold text-brand-orange tracking-wide">Hub</span>
    </div>
  </div>

<% when :footer %>
  <div class="flex items-center space-x-2">
    <%= image_tag "logo-white.svg", alt: "SupplierHub", class: "h-7 w-7" %>
    <span class="text-xl font-heading font-bold text-white tracking-wide">SupplierHub</span>
  </div>

<% when :login %>
  <div class="flex items-center space-x-3">
    <%= image_tag "logo-white.svg", alt: "SupplierHub", class: "h-12 w-12" %>
    <div>
      <div class="flex items-baseline space-x-1">
        <span class="text-3xl font-heading font-bold text-white tracking-wide">Supplier</span>
        <span class="text-3xl font-heading font-bold text-brand-orange tracking-wide">Hub</span>
      </div>
    </div>
  </div>

<% when :login_mobile %>
  <div class="flex items-center space-x-2">
    <%= image_tag "logo.svg", alt: "SupplierHub", class: "h-10 w-10" %>
    <div class="flex items-baseline space-x-0.5">
      <span class="text-2xl font-heading font-bold text-brand-navy tracking-wide">Supplier</span>
      <span class="text-2xl font-heading font-bold text-brand-orange tracking-wide">Hub</span>
    </div>
  </div>
<% end %>
