<nav class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path, class: "text-xl font-bold text-indigo-600" do %>
            SupplierHub
          <% end %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Dashboard", root_path, 
              class: "inline-flex items-center border-b-2 #{current_page?(root_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
          
          <%= link_to "Order Lists", order_lists_path, 
              class: "inline-flex items-center border-b-2 #{controller_name == 'order_lists' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
          
          <%= link_to "Orders", orders_path, 
              class: "inline-flex items-center border-b-2 #{controller_name == 'orders' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
          
          <%= link_to "Products", products_path, 
              class: "inline-flex items-center border-b-2 #{controller_name == 'products' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
          
          <%= link_to "Suppliers", supplier_credentials_path, 
              class: "inline-flex items-center border-b-2 #{controller_name == 'supplier_credentials' ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
        </div>
      </div>

      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <!-- Location selector -->
        <% if current_user.locations.any? %>
          <div class="mr-4">
            <select id="location-selector" 
                    class="rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500"
                    data-controller="location-selector">
              <% current_user.locations.each do |location| %>
                <option value="<%= location.id %>" <%= 'selected' if location == current_location %>>
                  <%= location.name %>
                </option>
              <% end %>
            </select>
          </div>
        <% end %>

        <!-- User dropdown -->
        <div class="relative ml-3" data-controller="dropdown">
          <button type="button" 
                  class="flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                  data-action="click->dropdown#toggle">
            <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-100">
              <span class="text-sm font-medium leading-none text-indigo-700">
                <%= current_user.full_name.first.upcase %>
              </span>
            </span>
          </button>

          <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5"
               data-dropdown-target="menu">
            <div class="px-4 py-2 text-sm text-gray-700 border-b">
              <%= current_user.full_name %>
            </div>
            <%= link_to "Settings", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Locations", locations_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% if current_user.admin? %>
              <%= link_to "Sidekiq", sidekiq_web_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% end %>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button type="button" 
                class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500"
                data-controller="mobile-menu"
                data-action="click->mobile-menu#toggle">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
