<% if notice.present? %>
  <div class="mb-4 rounded-md bg-brand-green-50 border border-brand-green/20 p-4" data-controller="flash" data-flash-dismiss-after-value="5000">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-brand-green" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-brand-green-dark"><%= notice %></p>
      </div>
      <div class="ml-auto pl-3">
        <button type="button" class="inline-flex rounded-md bg-brand-green-50 p-1.5 text-brand-green hover:bg-brand-green-100" data-action="click->flash#dismiss">
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>

