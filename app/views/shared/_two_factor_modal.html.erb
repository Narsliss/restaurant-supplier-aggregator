<div data-controller="two-factor"
     data-two-factor-session-token-value=""
     data-two-factor-expires-at-value="">
  
  <div data-two-factor-target="modal" 
       class="hidden relative z-50">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <!-- Modal -->
    <div class="fixed inset-0 z-10 overflow-y-auto">
      <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md sm:p-6">
          <div>
            <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-brand-orange-50">
              <svg class="h-6 w-6 text-brand-orange" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
            </div>
            <div class="mt-3 text-center sm:mt-5">
              <h3 class="text-lg font-semibold leading-6 text-gray-900">
                Verification Required
              </h3>
              <div class="mt-2 space-y-2">
                <p class="text-sm text-gray-700 font-medium">
                  Your credentials have been submitted successfully.
                </p>
                <p data-two-factor-target="message" class="text-sm text-gray-500">
                  Check your email for a verification code.
                </p>
                <p class="text-sm text-gray-500">
                  Enter the code below once you receive it.
                </p>
              </div>
            </div>
          </div>

          <div class="mt-5">
            <label for="verification-code" class="block text-sm font-medium text-gray-700 mb-1">
              Verification Code
            </label>
            <input type="text" 
                   id="verification-code"
                   data-two-factor-target="codeInput"
                   data-action="keydown->two-factor#handleKeydown"
                   class="block w-full rounded-md border-gray-300 text-center text-2xl tracking-widest shadow-sm focus:border-brand-green focus:ring-brand-green"
                   placeholder="000000"
                   maxlength="10"
                   autocomplete="one-time-code"
                   inputmode="numeric">
          </div>

          <div data-two-factor-target="error" 
               class="hidden mt-4 rounded-md bg-red-50 p-3">
            <p class="text-sm text-red-700"></p>
          </div>

          <div class="mt-4 flex items-center justify-between">
            <span class="text-sm text-gray-500">
              Time remaining: <span data-two-factor-target="timer" class="font-medium">5:00</span>
            </span>
          </div>

          <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
            <button type="button"
                    data-two-factor-target="submitBtn"
                    data-action="click->two-factor#submitCode"
                    class="inline-flex w-full justify-center rounded-md bg-brand-orange px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-orange-light focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-orange sm:col-start-2">
              Verify
            </button>
            <button type="button"
                    data-action="click->two-factor#cancel"
                    class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0">
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
