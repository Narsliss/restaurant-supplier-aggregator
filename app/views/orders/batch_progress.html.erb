<div class="max-w-4xl mx-auto"
     data-controller="batch-progress"
     data-batch-progress-url-value="<%= batch_placement_status_orders_path(batch_id: @batch_id, order_list_id: @order_list_id) %>"
     data-batch-progress-processing-value="<%= @any_processing %>">

  <div class="mb-6">
    <%= link_to "&larr; Order History".html_safe, orders_path, class: "text-sm text-brand-orange hover:text-brand-orange-light" %>
  </div>

  <div class="flex flex-col gap-2 sm:flex-row sm:justify-between sm:items-start mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900" data-batch-progress-target="heading">
        <%= @any_processing ? "Submitting Orders" : "Order Batch" %>
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        <%= @orders.size %> suppliers &middot; <%= @batch_items %> items &middot; <%= number_to_currency(@batch_total) %>
      </p>
    </div>
  </div>

  <%# Processing banner — shown when any orders are still processing %>
  <% if @any_processing %>
    <div class="mb-6" data-processing-banner>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex items-center gap-3">
          <svg class="animate-spin h-5 w-5 text-blue-600 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <div>
            <p class="text-blue-800 font-medium text-sm">Submitting orders to suppliers...</p>
            <p class="text-blue-600 text-xs mt-0.5">Each order is being processed. This page updates automatically.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Complete banner — hidden initially, shown by JS when all orders finish %>
  <div class="mb-6 hidden" data-complete-banner>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <p class="text-green-800 font-medium text-sm">All orders have been processed</p>
          <p class="text-green-600 text-xs mt-0.5">Review the results below.</p>
        </div>
      </div>
    </div>
  </div>

  <%# Show status banner on server-render if nothing is processing %>
  <% unless @any_processing %>
    <% has_failures = @orders.any?(&:failed?) %>
    <% has_dry_runs = @orders.any?(&:dry_run_complete?) %>
    <div class="mb-6">
      <% if has_failures %>
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="text-amber-800 font-medium text-sm">Some orders had issues</p>
              <p class="text-amber-600 text-xs mt-0.5">Review the results below.</p>
            </div>
          </div>
        </div>
      <% elsif has_dry_runs %>
        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-purple-800 font-medium text-sm">Dry Run Complete &mdash; No Orders Placed</p>
              <p class="text-purple-600 text-xs mt-0.5">The checkout flow was tested but no real orders were submitted.</p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-green-800 font-medium text-sm">All orders processed successfully</p>
              <p class="text-green-600 text-xs mt-0.5">Review the results below.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%# Order cards — one per supplier, with item details %>
  <div class="space-y-4">
    <% @orders.each do |order| %>
      <div class="bg-white shadow rounded-lg overflow-hidden"
           data-batch-progress-target="orderCard"
           data-order-id="<%= order.id %>">

        <%# Supplier header %>
        <div class="px-4 sm:px-5 py-4 border-b border-gray-100">
          <div class="flex items-start justify-between gap-3">
            <div class="min-w-0 flex-1">
              <div class="flex flex-wrap items-center gap-2">
                <h3 class="text-base font-semibold text-gray-900">
                  <%= link_to order.supplier.name, order_path(order), class: "hover:text-brand-orange" %>
                </h3>
                <% case order.status %>
                <% when "pending" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span>
                <% when "processing" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 animate-pulse">Processing</span>
                <% when "submitted" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Submitted</span>
                <% when "confirmed" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Confirmed</span>
                <% when "dry_run_complete" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">Dry Run Complete</span>
                <% when "failed" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Failed</span>
                <% when "cancelled" %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Cancelled</span>
                <% else %>
                  <span data-status-badge class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= order.status.titleize %></span>
                <% end %>
              </div>
              <p class="mt-1 text-sm text-gray-500">
                <%= order.order_items.size %> items
                <% if order.delivery_date %>
                  &middot; Delivery: <%= order.delivery_date.strftime("%b %d, %Y") %>
                <% end %>
                <% if order.confirmation_number.present? %>
                  &middot; <span data-confirmation-wrapper>Conf: <span data-confirmation class="font-medium text-gray-700"><%= order.confirmation_number %></span></span>
                <% else %>
                  <span data-confirmation-wrapper class="hidden">&middot; Conf: <span data-confirmation class="font-medium text-gray-700"></span></span>
                <% end %>
              </p>
            </div>
            <div class="flex items-center gap-3 flex-shrink-0">
              <%# Spinner — hidden when not processing %>
              <div data-spinner class="<%= order.processing? ? '' : 'hidden' %>">
                <svg class="animate-spin h-5 w-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </div>
              <span data-total class="text-lg font-bold text-gray-900"><%= number_to_currency(order.total_amount) %></span>
            </div>
          </div>

          <%# Error message — hidden until failed %>
          <div data-error-wrapper class="<%= order.failed? && order.error_message.present? ? 'mt-2' : 'mt-2 hidden' %>">
            <div class="bg-red-50 border border-red-200 rounded p-2.5">
              <p class="text-sm text-red-700"><strong>Error:</strong> <span data-error><%= order.error_message %></span></p>
            </div>
          </div>
        </div>

        <%# Item list %>
        <% items = order.order_items.includes(supplier_product: :product) %>
        <% if items.any? %>
          <%# Mobile card layout %>
          <div class="sm:hidden divide-y divide-gray-100">
            <% items.each do |item| %>
              <div class="px-4 py-2.5">
                <div class="flex justify-between items-start gap-2">
                  <span class="text-sm text-gray-900 min-w-0"><%= item.product&.name || item.supplier_name %></span>
                  <span class="text-sm font-medium text-gray-900 flex-shrink-0"><%= number_to_currency(item.line_total) %></span>
                </div>
                <p class="text-xs text-gray-500 mt-0.5">
                  Qty: <%= item.quantity %> @ <%= number_to_currency(item.unit_price) %>
                  <% if item.supplier_sku.present? %>
                    &middot; SKU: <%= item.supplier_sku %>
                  <% end %>
                </p>
              </div>
            <% end %>
          </div>

          <%# Desktop table layout %>
          <div class="hidden sm:block">
            <table class="min-w-full divide-y divide-gray-100">
              <thead>
                <tr class="bg-gray-50">
                  <th class="px-5 py-2 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                  <th class="px-5 py-2 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
                  <th class="px-5 py-2 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
                  <th class="px-5 py-2 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
                  <th class="px-5 py-2 text-right text-xs font-medium text-gray-500 uppercase">Total</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-50">
                <% items.each do |item| %>
                  <tr>
                    <td class="px-5 py-2 text-sm text-gray-900"><%= item.product&.name || item.supplier_name %></td>
                    <td class="px-5 py-2 text-sm text-gray-500"><%= item.supplier_sku %></td>
                    <td class="px-5 py-2 text-sm text-gray-900 text-center"><%= item.quantity %></td>
                    <td class="px-5 py-2 text-sm text-gray-900 text-right"><%= number_to_currency(item.unit_price) %></td>
                    <td class="px-5 py-2 text-sm font-medium text-gray-900 text-right"><%= number_to_currency(item.line_total) %></td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr class="bg-gray-50">
                  <td colspan="4" class="px-5 py-2 text-sm font-medium text-gray-700 text-right">Subtotal:</td>
                  <td class="px-5 py-2 text-sm font-bold text-gray-900 text-right"><%= number_to_currency(order.total_amount) %></td>
                </tr>
              </tfoot>
            </table>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Batch summary %>
  <div class="mt-6 bg-white shadow rounded-lg p-4 sm:p-5">
    <div class="flex justify-between items-center">
      <span class="text-sm font-medium text-gray-700">Batch Total (<%= @orders.size %> suppliers, <%= @batch_items %> items)</span>
      <span class="text-xl font-bold text-gray-900"><%= number_to_currency(@batch_total) %></span>
    </div>
  </div>
</div>
