<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Orders</h1>
      <div class="mt-2 flex space-x-4">
        <%= link_to "Active", orders_path, class: "text-sm font-medium #{ params[:status].blank? ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-500 hover:text-gray-700' }" %>
        <%= link_to "History", history_orders_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
    <%= link_to "New Order", new_order_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
  </div>

  <% if @orders.any? %>
    <div class="bg-white shadow rounded-lg divide-y divide-gray-200">
      <% @orders.each do |order| %>
        <div class="p-4">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-sm font-medium text-gray-900">
                <%= link_to "Order ##{order.id}", order_path(order), class: "hover:text-indigo-600" %>
                &middot; <%= order.supplier.name %>
              </h3>
              <p class="text-sm text-gray-500">
                <%= order.order_items.size %> items &middot; <%= number_to_currency(order.total_amount) %>
                <% if order.submitted_at %>
                  &middot; Submitted <%= time_ago_in_words(order.submitted_at) %> ago
                <% end %>
              </p>
            </div>
            <div class="flex items-center space-x-3">
              <% case order.status %>
              <% when "pending" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span>
              <% when "processing" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Processing</span>
              <% when "submitted" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Submitted</span>
              <% when "failed" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Failed</span>
              <% when "cancelled" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Cancelled</span>
              <% end %>
              <%= link_to "View", order_path(order), class: "text-sm text-indigo-600 hover:text-indigo-900 font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No orders yet.</p>
    </div>
  <% end %>
</div>
