<% minimum = @order.supplier.order_minimum %>
<% meets_minimum = minimum.nil? || (@order.subtotal || 0) >= (minimum || 0) %>

<div class="max-w-4xl mx-auto"
     data-controller="order-status<%= ' order-edit' if @order.pending? %>"
     data-order-status-url-value="<%= placement_status_order_path(@order) %>"
     data-order-status-processing-value="<%= @order.processing? %>"
     <% if @order.pending? %>
       data-order-edit-order-id-value="<%= @order.id %>"
       data-order-edit-minimum-value="<%= minimum || 0 %>"
     <% end %>>
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-start mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Order #<%= @order.id %></h1>
      <p class="text-sm text-gray-500"><%= @order.supplier.name %> &middot; <%= @order.created_at.strftime("%b %d, %Y") %></p>
    </div>
    <div class="flex flex-wrap items-center gap-2">
      <% case @order.status %>
      <% when "pending" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">Pending</span>
      <% when "processing" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800" data-order-status-badge>Processing</span>
      <% when "submitted" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Submitted</span>
      <% when "confirmed" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Confirmed</span>
      <% when "dry_run_complete" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">Dry Run Complete</span>
      <% when "failed" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">Failed</span>
      <% when "cancelled" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">Cancelled</span>
      <% end %>
      <% if @order.pending? %>
        <%= button_to submit_order_path(@order), method: :post,
            class: "inline-flex items-center gap-1.5 text-white px-3 py-1.5 rounded-lg text-sm font-medium #{meets_minimum ? 'bg-brand-orange hover:bg-brand-orange-dark' : 'bg-gray-300 cursor-not-allowed'}",
            disabled: !meets_minimum,
            data: { order_edit_target: "submitButton" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          Submit Order
        <% end %>
      <% else %>
        <%= button_to reorder_order_path(@order), method: :post, class: "inline-flex items-center gap-1.5 bg-brand-orange text-white px-3 py-1.5 rounded-lg hover:bg-brand-orange-dark text-sm font-medium" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Reorder
        <% end %>
      <% end %>
      <%= link_to "Back", orders_path, class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
    </div>
  </div>

  <% if @order.pending? && !meets_minimum %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6" data-order-edit-target="minimumWarning">
      <p class="text-yellow-800 text-sm">
        <span class="font-medium">Warning:</span>
        <%= @order.supplier.name %> order minimum not met.
        <span class="text-yellow-600" data-order-edit-target="minimumShortfall">
          Current: <%= number_to_currency(@order.subtotal) %>,
          Need: <%= number_to_currency(minimum - (@order.subtotal || 0)) %> more
          (Minimum: <%= number_to_currency(minimum) %>)
        </span>
      </p>
    </div>
  <% end %>

  <% if @order.processing? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <div class="flex items-center gap-3">
        <svg class="animate-spin h-5 w-5 text-blue-600 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-blue-800">Submitting to <%= @order.supplier.name %></h3>
          <p class="text-sm text-blue-700 mt-0.5">Running through the checkout process. This page will update automatically.</p>
        </div>
      </div>
    </div>
  <% end %>

  <% if @order.dry_run_complete? %>
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 mb-6">
      <div class="flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-purple-800">Test Run — No Order Placed</h3>
          <p class="text-sm text-purple-700 mt-1">This was a dry run. The checkout flow was tested but no real order was submitted to <%= @order.supplier.name %>. No charges were made. To place a real order, checkout must be enabled for this supplier.</p>
        </div>
      </div>
    </div>
  <% end %>

  <% removed_validation = @validations.find { |v| v.validation_type == 'items_removed' } %>
  <% if removed_validation %>
    <div class="bg-amber-50 border border-amber-300 rounded-lg p-4 mb-6">
      <div class="flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="min-w-0">
          <h3 class="text-sm font-semibold text-amber-800">Items Removed — Out of Stock</h3>
          <p class="text-sm text-amber-700 mt-1"><%= removed_validation.message %></p>
          <% if removed_validation.details && removed_validation.details['removed_items'].present? %>
            <ul class="mt-2 space-y-1">
              <% removed_validation.details['removed_items'].each do |item| %>
                <li class="flex items-start gap-2 text-sm text-amber-800">
                  <span class="text-amber-500 flex-shrink-0 mt-0.5">&bull;</span>
                  <span>
                    <strong><%= item['name'] %></strong>
                    <% if item['sku'].present? %>
                      <span class="text-amber-600">(#<%= item['sku'] %>)</span>
                    <% end %>
                    <% if item['reason'].present? %>
                      <span class="text-amber-600">— <%= item['reason'] %></span>
                    <% end %>
                  </span>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Order Details -->
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 mb-6">
    <dl class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Supplier</dt>
        <dd class="mt-1 text-gray-900"><%= @order.supplier.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Delivery Date</dt>
        <% if @order.pending? %>
          <dd class="mt-1">
            <input type="date"
                   value="<%= @order.delivery_date %>"
                   min="<%= Date.tomorrow %>"
                   max="<%= Date.today + 30.days %>"
                   class="w-full sm:w-40 rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm"
                   data-action="change->order-edit#updateDeliveryDate"
                   data-order-edit-target="deliveryDate">
          </dd>
        <% else %>
          <dd class="mt-1 text-gray-900"><%= @order.delivery_date&.strftime("%b %d, %Y") || "Not set" %></dd>
        <% end %>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Total</dt>
        <dd class="mt-1 text-xl font-bold text-gray-900" data-order-edit-target="orderTotal"><%= number_to_currency(@order.total_amount) %></dd>
        <% if @order.total_amount && @order.subtotal && @order.total_amount > @order.subtotal && @order.subtotal > 0 %>
          <dd class="mt-0.5 text-xs text-gray-500">
            Items: <%= number_to_currency(@order.subtotal) %> +
            <span class="text-amber-600 font-medium">
              <%= number_to_currency(@order.total_amount - @order.subtotal) %> surcharge/fees
            </span>
          </dd>
        <% end %>
      </div>
      <% if @order.confirmation_number.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Confirmation #</dt>
          <dd class="mt-1 text-gray-900 break-all"><%= @order.confirmation_number %></dd>
        </div>
      <% end %>
    </dl>
    <% if @order.failed? && @order.error_message.present? %>
      <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-3">
        <p class="text-sm text-red-700"><strong>Error:</strong> <%= @order.error_message %></p>
      </div>
    <% end %>
    <% if @order.notes.present? || @order.pending? %>
      <div class="mt-4">
        <% if @order.pending? %>
          <label class="text-sm font-medium text-gray-500">Notes</label>
          <input type="text"
                 value="<%= @order.notes %>"
                 placeholder="Order notes..."
                 class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green text-sm"
                 data-action="change->order-edit#updateNotes">
        <% elsif @order.notes.present? %>
          <div class="text-sm text-gray-500"><strong>Notes:</strong><br><%= simple_format(@order.notes, {}, wrapper_tag: "span") %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Order Items -->
  <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
    <h3 class="px-4 py-3 bg-gray-50 text-sm font-medium text-gray-700">
      Items (<span data-order-edit-target="itemCount"><%= @items.size %></span>)
    </h3>

    <% if @order.pending? %>
      <%# ====== EDITABLE MODE (pending orders) ====== %>

      <!-- Mobile card layout -->
      <div class="sm:hidden divide-y divide-gray-200">
        <% @items.each do |item| %>
          <div class="p-3" data-order-edit-target="itemRow" data-item-id="<%= item.id %>" data-unit-price="<%= item.unit_price %>">
            <div class="flex justify-between items-start mb-2">
              <div class="flex-1 min-w-0 mr-3">
                <p class="text-sm font-medium text-gray-900"><%= item.product&.name || item.supplier_name %></p>
                <p class="text-xs text-gray-400">SKU: <%= item.supplier_sku %></p>
              </div>
              <div class="flex items-center gap-2">
                <span class="text-sm font-semibold text-gray-900" data-order-edit-target="lineTotal" data-item-id="<%= item.id %>">
                  <%= number_to_currency(item.line_total) %>
                </span>
                <button type="button"
                        data-action="order-edit#removeItem"
                        data-item-id="<%= item.id %>"
                        class="text-red-400 hover:text-red-600 transition-colors"
                        title="Remove item">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500"><%= number_to_currency(item.unit_price) %> each</span>
              <div class="inline-flex items-center gap-1">
                <button type="button"
                        data-action="order-edit#decrementItem"
                        data-item-id="<%= item.id %>"
                        class="w-8 h-8 flex items-center justify-center rounded-md border border-gray-300 text-gray-600 hover:bg-gray-200 hover:border-gray-400 hover:text-gray-900 active:bg-gray-300 transition-colors">
                  &minus;
                </button>
                <input type="number"
                       value="<%= item.quantity.to_i %>"
                       min="1"
                       class="w-14 rounded-md border-gray-300 text-sm text-center [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
                       data-order-edit-target="quantityInput"
                       data-action="change->order-edit#updateQuantity"
                       data-item-id="<%= item.id %>">
                <button type="button"
                        data-action="order-edit#incrementItem"
                        data-item-id="<%= item.id %>"
                        class="w-8 h-8 flex items-center justify-center rounded-md border border-gray-300 text-gray-600 hover:bg-gray-200 hover:border-gray-400 hover:text-gray-900 active:bg-gray-300 transition-colors">
                  +
                </button>
              </div>
            </div>
          </div>
        <% end %>
        <div class="px-4 py-3 bg-gray-50 flex justify-between">
          <span class="text-sm font-medium text-gray-900">Total</span>
          <span class="text-sm font-bold text-gray-900" data-order-edit-target="orderTotalFooter"><%= number_to_currency(@order.total_amount) %></span>
        </div>
      </div>

      <!-- Desktop table layout -->
      <div class="hidden sm:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Unit Price</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase w-10"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @items.each do |item| %>
              <tr data-order-edit-target="itemRow" data-item-id="<%= item.id %>" data-unit-price="<%= item.unit_price %>">
                <td class="px-4 py-3 text-sm text-gray-900"><%= item.product&.name || item.supplier_name %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= item.supplier_sku %></td>
                <td class="px-4 py-3 text-center">
                  <div class="inline-flex items-center gap-1">
                    <button type="button"
                            data-action="order-edit#decrementItem"
                            data-item-id="<%= item.id %>"
                            class="w-7 h-7 flex items-center justify-center rounded-md border border-gray-300 text-gray-600 hover:bg-gray-200 hover:border-gray-400 hover:text-gray-900 active:bg-gray-300 transition-colors text-sm">
                      &minus;
                    </button>
                    <input type="number"
                           value="<%= item.quantity.to_i %>"
                           min="1"
                           class="w-14 rounded-md border-gray-300 text-sm text-center [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
                           data-order-edit-target="quantityInput"
                           data-action="change->order-edit#updateQuantity"
                           data-item-id="<%= item.id %>">
                    <button type="button"
                            data-action="order-edit#incrementItem"
                            data-item-id="<%= item.id %>"
                            class="w-7 h-7 flex items-center justify-center rounded-md border border-gray-300 text-gray-600 hover:bg-gray-200 hover:border-gray-400 hover:text-gray-900 active:bg-gray-300 transition-colors text-sm">
                      +
                    </button>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= number_to_currency(item.unit_price) %></td>
                <td class="px-4 py-3 text-sm text-gray-900 text-right font-medium" data-order-edit-target="lineTotal" data-item-id="<%= item.id %>">
                  <%= number_to_currency(item.line_total) %>
                </td>
                <td class="px-4 py-3 text-center">
                  <button type="button"
                          data-action="order-edit#removeItem"
                          data-item-id="<%= item.id %>"
                          class="text-red-400 hover:text-red-600 transition-colors"
                          title="Remove item">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="4" class="px-4 py-3 text-sm font-medium text-gray-900 text-right">Total:</td>
              <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right" data-order-edit-target="orderTotalFooter"><%= number_to_currency(@order.total_amount) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>

    <% else %>
      <%# ====== READ-ONLY MODE (non-pending orders) ====== %>

      <!-- Mobile card layout -->
      <div class="sm:hidden divide-y divide-gray-200">
        <% @items.each do |item| %>
          <div class="p-4 space-y-1">
            <div class="flex justify-between items-start gap-2">
              <span class="text-sm font-medium text-gray-900"><%= item.product&.name || item.supplier_name %></span>
              <% if item.status == "confirmed" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 flex-shrink-0">Confirmed</span>
              <% elsif item.status == "unavailable" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 flex-shrink-0">Unavailable</span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 flex-shrink-0"><%= item.status&.titleize || "Pending" %></span>
              <% end %>
            </div>
            <div class="flex justify-between text-sm text-gray-500">
              <span>Qty: <%= item.quantity %> @ <%= number_to_currency(item.unit_price) %></span>
              <span class="font-semibold text-gray-900"><%= number_to_currency(item.line_total) %></span>
            </div>
          </div>
        <% end %>
        <div class="px-4 py-3 bg-gray-50 flex justify-between">
          <span class="text-sm font-medium text-gray-900">Total</span>
          <span class="text-sm font-bold text-gray-900"><%= number_to_currency(@order.total_amount) %></span>
        </div>
      </div>

      <!-- Desktop table layout -->
      <div class="hidden sm:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Unit Price</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @items.each do |item| %>
              <tr>
                <td class="px-4 py-3 text-sm text-gray-900"><%= item.product&.name || item.supplier_name %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= item.supplier_sku %></td>
                <td class="px-4 py-3 text-sm text-gray-900 text-center"><%= item.quantity %></td>
                <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= number_to_currency(item.unit_price) %></td>
                <td class="px-4 py-3 text-sm text-gray-900 text-right font-medium"><%= number_to_currency(item.line_total) %></td>
                <td class="px-4 py-3 text-center">
                  <% if item.status == "confirmed" %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Confirmed</span>
                  <% elsif item.status == "unavailable" %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Unavailable</span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800"><%= item.status&.titleize || "Pending" %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="4" class="px-4 py-3 text-sm font-medium text-gray-900 text-right">Total:</td>
              <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right"><%= number_to_currency(@order.total_amount) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% end %>
  </div>

  <!-- Validations -->
  <% if @validations.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <h3 class="px-4 py-3 bg-gray-50 text-sm font-medium text-gray-700">Validation Results</h3>
      <div class="divide-y divide-gray-200">
        <% @validations.each do |validation| %>
          <div class="px-4 py-3 flex items-start sm:items-center gap-3">
            <% if validation.passed %>
              <span class="text-green-500 flex-shrink-0">&#10003;</span>
            <% else %>
              <span class="text-red-500 flex-shrink-0">&#10007;</span>
            <% end %>
            <div class="min-w-0">
              <p class="text-sm text-gray-900"><%= validation.validation_type.titleize %></p>
              <p class="text-xs text-gray-500 break-words"><%= validation.message %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
