<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Order #<%= @order.id %></h1>
      <p class="text-sm text-gray-500"><%= @order.supplier.name %> &middot; <%= @order.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="flex items-center space-x-3">
      <% case @order.status %>
      <% when "pending" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">Pending</span>
        <%= button_to "Submit Order", submit_order_path(@order), method: :post, class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm", data: { turbo_confirm: "Submit this order to #{@order.supplier.name}?" } %>
        <%= button_to "Cancel", cancel_order_path(@order), method: :post, class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 text-sm", data: { turbo_confirm: "Cancel this order?" } %>
      <% when "processing" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">Processing...</span>
      <% when "submitted" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Submitted</span>
      <% when "failed" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">Failed</span>
        <%= button_to "Retry", submit_order_path(@order), method: :post, class: "bg-brand-orange text-white px-4 py-2 rounded-lg hover:bg-brand-orange-dark text-sm" %>
      <% when "cancelled" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">Cancelled</span>
      <% end %>
      <%= link_to "Back", orders_path, class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
    </div>
  </div>

  <!-- Order Details -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <dl class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Supplier</dt>
        <dd class="mt-1 text-gray-900"><%= @order.supplier.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Location</dt>
        <dd class="mt-1 text-gray-900"><%= @order.location.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Total</dt>
        <dd class="mt-1 text-xl font-bold text-gray-900"><%= number_to_currency(@order.total_amount) %></dd>
      </div>
      <% if @order.confirmation_number.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Confirmation #</dt>
          <dd class="mt-1 text-gray-900"><%= @order.confirmation_number %></dd>
        </div>
      <% end %>
    </dl>
    <% if @order.error_message.present? %>
      <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-3">
        <p class="text-sm text-red-700"><strong>Error:</strong> <%= @order.error_message %></p>
      </div>
    <% end %>
    <% if @order.notes.present? %>
      <div class="mt-4">
        <p class="text-sm text-gray-500"><strong>Notes:</strong> <%= @order.notes %></p>
      </div>
    <% end %>
  </div>

  <!-- Order Items -->
  <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
    <h3 class="px-4 py-3 bg-gray-50 text-sm font-medium text-gray-700">Items (<%= @items.size %>)</h3>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
          <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
          <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Unit Price</th>
          <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total</th>
          <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @items.each do |item| %>
          <tr>
            <td class="px-4 py-3 text-sm text-gray-900"><%= item.product.name %></td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= item.supplier_sku %></td>
            <td class="px-4 py-3 text-sm text-gray-900 text-center"><%= item.quantity %></td>
            <td class="px-4 py-3 text-sm text-gray-900 text-right"><%= number_to_currency(item.unit_price) %></td>
            <td class="px-4 py-3 text-sm text-gray-900 text-right font-medium"><%= number_to_currency(item.total_price) %></td>
            <td class="px-4 py-3 text-center">
              <% if item.status == "confirmed" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Confirmed</span>
              <% elsif item.status == "unavailable" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Unavailable</span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800"><%= item.status&.titleize || "Pending" %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot class="bg-gray-50">
        <tr>
          <td colspan="4" class="px-4 py-3 text-sm font-medium text-gray-900 text-right">Total:</td>
          <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right"><%= number_to_currency(@order.total_amount) %></td>
          <td></td>
        </tr>
      </tfoot>
    </table>
  </div>

  <!-- Validations -->
  <% if @validations.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <h3 class="px-4 py-3 bg-gray-50 text-sm font-medium text-gray-700">Validation Results</h3>
      <div class="divide-y divide-gray-200">
        <% @validations.each do |validation| %>
          <div class="px-4 py-3 flex items-center space-x-3">
            <% if validation.passed %>
              <span class="text-green-500">&#10003;</span>
            <% else %>
              <span class="text-red-500">&#10007;</span>
            <% end %>
            <div>
              <p class="text-sm text-gray-900"><%= validation.validation_type.titleize %></p>
              <p class="text-xs text-gray-500"><%= validation.message %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
