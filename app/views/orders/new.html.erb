<div class="max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">New Order</h1>

  <% if @preview.present? %>
    <!-- Order Preview -->
    <div class="bg-white shadow rounded-lg p-4 sm:p-6 mb-6">
      <h2 class="text-lg font-medium text-gray-900 mb-2">Order Preview</h2>
      <p class="text-sm text-gray-500 mb-4">
        From: <strong><%= @order_list.name %></strong><br class="sm:hidden">
        <span class="hidden sm:inline"> &middot; </span>
        Supplier: <strong><%= @supplier.name %></strong>
      </p>

      <!-- Mobile card layout -->
      <div class="sm:hidden divide-y divide-gray-200 border rounded-lg mb-4">
        <% @preview[:items]&.each do |item| %>
          <div class="p-3">
            <p class="text-sm font-medium text-gray-900"><%= item[:product_name] %></p>
            <div class="flex justify-between text-sm text-gray-500 mt-1">
              <span>Qty: <%= item[:quantity] %> @ <%= number_to_currency(item[:unit_price]) %></span>
              <span class="font-semibold text-gray-900"><%= number_to_currency(item[:total]) %></span>
            </div>
          </div>
        <% end %>
        <div class="p-3 bg-gray-50 flex justify-between">
          <span class="text-sm font-medium">Estimated Total</span>
          <span class="text-sm font-bold"><%= number_to_currency(@preview[:total]) %></span>
        </div>
      </div>
      <!-- Desktop table -->
      <div class="hidden sm:block overflow-x-auto mb-4">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">Qty</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Unit Price</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @preview[:items]&.each do |item| %>
              <tr>
                <td class="px-4 py-2 text-sm text-gray-900"><%= item[:product_name] %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-center"><%= item[:quantity] %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-right"><%= number_to_currency(item[:unit_price]) %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-right"><%= number_to_currency(item[:total]) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-4 py-2 text-sm font-medium text-right">Estimated Total:</td>
              <td class="px-4 py-2 text-sm font-bold text-right"><%= number_to_currency(@preview[:total]) %></td>
            </tr>
          </tfoot>
        </table>
      </div>

      <%= form_with(url: orders_path, method: :post) do |form| %>
        <%= form.hidden_field :order_list_id, value: @order_list.id %>
        <%= form.hidden_field :supplier_id, value: @supplier.id %>
        <div class="mb-4">
          <%= form.label :notes, "Order Notes", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
        </div>
        <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
          <%= link_to "Cancel", order_lists_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 text-center" %>
          <%= form.submit "Create Order", class: "px-4 py-2 text-sm font-medium text-white bg-brand-orange rounded-md hover:bg-brand-orange-dark cursor-pointer" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Select Order List and Supplier -->
    <div class="bg-white shadow rounded-lg p-4 sm:p-6">
      <%= form_with(url: new_order_path, method: :get, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :order_list_id, "Order List", class: "block text-sm font-medium text-gray-700" %>
          <% if @order_lists.present? %>
            <%= form.select :order_list_id, @order_lists.map { |l| [l.name, l.id] }, { prompt: "Select an order list" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
          <% else %>
            <p class="mt-1 text-sm text-gray-500">No order lists available. <%= link_to "Create one first", new_order_list_path, class: "text-brand-orange hover:text-brand-orange-dark" %>.</p>
          <% end %>
        </div>

        <div>
          <%= form.label :supplier_id, "Supplier", class: "block text-sm font-medium text-gray-700" %>
          <% if @suppliers.present? %>
            <%= form.select :supplier_id, @suppliers.map { |s| [s.name, s.id] }, { prompt: "Select a supplier" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-green focus:ring-brand-green" %>
          <% else %>
            <p class="mt-1 text-sm text-gray-500">No suppliers configured.</p>
          <% end %>
        </div>

        <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
          <%= link_to "Cancel", orders_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 text-center" %>
          <%= form.submit "Preview Order", class: "px-4 py-2 text-sm font-medium text-white bg-brand-orange rounded-md hover:bg-brand-orange-dark cursor-pointer" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
