<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Start Your SupplierHub Pro Subscription
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Streamline your restaurant procurement with price comparison, automated ordering, and multi-supplier management.
      </p>
    </div>

    <!-- Pricing Card -->
    <div class="max-w-lg mx-auto">
      <div class="bg-white rounded-2xl shadow-xl border-2 border-primary-500 overflow-hidden">
        <!-- Popular Badge -->
        <div class="bg-primary-500 text-white text-center py-2 text-sm font-semibold">
          14-Day Free Trial
        </div>

        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Pro Plan</h2>
          <p class="text-gray-600 mb-6">Everything you need to manage restaurant suppliers</p>

          <div class="flex items-baseline mb-8">
            <span class="text-5xl font-bold text-gray-900">$99</span>
            <span class="text-gray-500 ml-2">/month</span>
          </div>

          <!-- Features -->
          <ul class="space-y-4 mb-8">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Connect unlimited supplier accounts</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Real-time price comparison across vendors</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Smart split ordering for best prices</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">One-click ordering across suppliers</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Order history & spend analytics</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Priority support</span>
            </li>
          </ul>

          <!-- CTA Button -->
          <%= form_with url: subscription_path, method: :post, local: true do %>
            <button type="submit" class="w-full py-4 px-6 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg text-lg transition-colors">
              Start Free Trial
            </button>
          <% end %>

          <p class="text-center text-sm text-gray-500 mt-4">
            No credit card required for trial. Cancel anytime.
          </p>
        </div>
      </div>

      <!-- Trust Badges -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500 mb-4">Trusted by restaurants nationwide</p>
        <div class="flex justify-center items-center space-x-6">
          <div class="flex items-center text-gray-400">
            <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm">Secure Payment</span>
          </div>
          <div class="flex items-center text-gray-400">
            <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm">Cancel Anytime</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
