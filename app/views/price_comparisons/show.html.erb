<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Price Comparison</h1>
      <p class="text-sm text-gray-500">Order List: <%= @order_list.name %></p>
    </div>
    <div class="flex space-x-3">
      <%= button_to "Refresh Prices", refresh_prices_price_comparison_path(@order_list), method: :post, class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm" %>
      <%= link_to "Back to List", order_list_path(@order_list), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
    </div>
  </div>

  <% if @comparison.present? %>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-gray-700">Price comparison data loaded. Review supplier pricing above.</p>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500">No price data available. Click "Refresh Prices" to fetch current prices.</p>
    </div>
  <% end %>
</div>
